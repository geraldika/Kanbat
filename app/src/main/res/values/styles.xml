<resources>

    <style name="KanbatTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/textsize_14sp</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="fontFamily">@font/helvetica</item>
    </style>

    <style name="KanbatTheme.SlideAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_anim</item>
        <item name="android:windowExitAnimation">@anim/exit_anim</item>
    </style>

    <style name="KanbatTheme.DeskTabLayoutTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/textsize_20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="KanbatTheme.TitleTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="android:textSize">@dimen/textsize_16sp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

    <style name="KanbatTheme.TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="android:lineSpacingExtra">@dimen/size_4dp</item>
        <item name="android:textSize">@dimen/textsize_18sp</item>
    </style>

    <style name="KanbatTheme.BorderedButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/size_48dp</item>
        <item name="android:paddingStart">@dimen/size_36dp</item>
        <item name="android:textSize">@dimen/textsize_18sp</item>
        <item name="android:paddingEnd">@dimen/size_36dp</item>
        <item name="android:background">@drawable/selector_bordered_button</item>
        <item name="android:textColor">@drawable/selector_text_accent_color</item>
        <item name="android:layout_marginBottom">@dimen/size_10dp</item>
    </style>

    <style name="KanbatTheme.BorderedSmallButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/size_36dp</item>
        <item name="android:paddingStart">@dimen/size_16dp</item>
        <item name="android:textSize">@dimen/textsize_14sp</item>
        <item name="android:paddingEnd">@dimen/size_16dp</item>
        <item name="android:background">@drawable/selector_bordered_button</item>
        <item name="android:textColor">@drawable/selector_text_accent_color</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/textColorTertiary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
